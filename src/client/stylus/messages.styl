.container-chat
	height calc(100vh - 54px)
	position relative
	
	
	
	&-messages
		padding 1em
		height calc( 100% - 116px )
		
	
	&-form
		border-top 1px solid rgba(128, 128, 128, 0.41)
		padding .5em
		position absolute
		bottom 0
		left 0
		right 0
		
		&-text
			padding .8em
			resize none
			width 80%