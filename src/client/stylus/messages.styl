
.container-chat
	height calc(100vh - 54px)
	position relative

	&-messages
		padding 1em
		height calc( 100vh - 177.73px )
		overflow-y auto

	&-formulario
		position absolute
		bottom 0
		left 0
		right 0
		border 1px red solid

	&-form
		border-top 1px solid rgba(128, 128, 128, 0.41)
		padding .5em
		position relative

		&-content-emojis
			width 250px
			height 200px
			position absolute
			right .5em
			top -210px
			border 1px red solid



		&-text
			padding .8em
			padding-top 1.2em
			resize none
			width calc(100% - 115px)
			border none
			position relative
			box-sizing border-box

		&-buttons
			position absolute
			right .6em
			top 1em
			overflow hidden


		&-emoji
			background none
			padding 0
			border none
			float left
			margin-right .5em

			img
				padding 0
				display block
				margin 0 auto
				width 50px
				height 50px

		&-send
			color verde-claro
			background azul-oscuro
			padding 0
			border none
			border-radius 50%
			font-size 2.3em
			float right
			width 50px
			height 50px
			&:before
				display block
				transform rotate(-24deg)
				position: relative
				top -3px
				right -2px
